<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        xmlns:custom="clr-namespace:ToDo.CustomControls" xmlns:view="clr-namespace:ToDo.MVMM.Views"
        xmlns:ViewModels="clr-namespace:ToDo.MVMM.ViewModels"
        mc:Ignorable="d" WindowStyle="None"
        Title="MainWindow" Height="450" Width="830"
        BorderThickness="0.5"
        BorderBrush="Gray"
        Background="#181818"
        Icon="Media\ToDoLogo.png" RenderOptions.BitmapScalingMode="Fant">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModels:TasksListViewModel}">
            <view:TasksView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title Bar -->
        <Grid Background="#242424" Name="TitleBar" MouseDown="TitleBar_MouseDown" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">

                <Image Source="Media\ToDoLogo.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       Width="25" Height="25"
                       Margin="5 0 0 0"
                       />
                <TextBlock Text="To Do" Foreground="LightGray" VerticalAlignment="Center" Margin="5 0 0 0" FontSize="15"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <custom:CustomButton x:Name="Minimize"
                    Grid.Column="3"
                    Width="40"
                    Background="#242424"
                    BorderThickness="0"
                    Foreground="White"
                    FontSize="15"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Right"
                    HoverColor="#4f4f4f"
                    ActiveColor="Gray"
                    Click="Minimize_Click"
                    >—</custom:CustomButton>

                <custom:CustomButton x:Name="Resize"
                    Grid.Column="3"
                    Width="40"
                    Background="#242424"
                    BorderThickness="0"
                    Foreground="White"
                    FontSize="15"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Right"
                    HoverColor="#4f4f4f"
                    ActiveColor="Gray"
                    Click="Resize_Click"
                    >☐</custom:CustomButton>

                <custom:CustomButton x:Name="Close"
                    Grid.Column="3"
                    Width="40"
                                        Background="#242424"
                    BorderThickness="0"
                    Foreground="White"
                    FontSize="15"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Right"
                    HoverColor="#4f4f4f"
                    ActiveColor="Gray"
                    Click="Close_Click"
                          
                    >✕</custom:CustomButton>
            </StackPanel>
        </Grid>

        <!-- Side Panel -->
        <StackPanel Background="#242424" Grid.Row="1" Name="SidePanel">
            <custom:CustomButton IsEnabled="False"
                         Height="75"
                         CornerRadius="10"
                         Background="Transparent"
                         HoverColor="#3A3A3A"
                         ActiveColor="#525252"
                         HorizontalContentAlignment="Left"
                         Margin="5 11 5 0">

                <!-- User name Button-->
                <custom:CustomButton.Content>
                    <StackPanel Orientation="Horizontal">

                        <Image Source="Media\UserIcon.png"
                               RenderOptions.BitmapScalingMode="Fant"
                               Width="45" Height="45"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Margin="10 0 0 0"/>

                        <StackPanel Margin="15 0 0 0" VerticalAlignment="Center">

                            <TextBlock Text="{Binding UserName}" FontSize="20"
                                       Foreground="White" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>

                            <TextBlock Text="User" FontSize="14"
                                       Foreground="Gray" FontStyle="Italic" TextTrimming="CharacterEllipsis"
                                       Margin="0 -3 0 0"/>
                        </StackPanel>

                    </StackPanel>
                </custom:CustomButton.Content>
            </custom:CustomButton>
            <Line X1="0" Y1="0" X2="300" Y2="0" Stroke="#616161" StrokeThickness="1"
                  Margin="0 8 0 0"/>

            <custom:CustomButton Margin="15 20 15 0" Height="40" CornerRadius="5" Background="Gray"/>
        </StackPanel>

        <ContentControl Grid.Column="1" Grid.Row="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
